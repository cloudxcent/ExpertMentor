rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow authenticated users to read any profile (for avatars, names, etc)
    // Allow users to update only their own profile
    match /profiles/{userId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null && request.auth.uid == userId;
      allow update: if request.auth != null && request.auth.uid == userId;
      allow delete: if false;
    }

    // Chat sessions - allow both users in the session to read/write
    match /chat_sessions/{sessionId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null;
      allow update: if request.auth != null;

      // Messages within chat sessions
      match /messages/{messageId} {
        allow read: if request.auth != null;
        allow create: if request.auth != null && request.resource.data.senderId == request.auth.uid;
        allow update: if request.auth != null;
      }
    }

    // Call sessions - allow authenticated users to read and create
    match /call_sessions/{sessionId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null;
      allow update: if request.auth != null;
      allow delete: if request.auth != null;
    }

    // Notifications - allow users to read their own notifications
    match /notifications/{notificationId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null;
      allow update: if request.auth != null;
    }

    // Default allow read for authenticated users (for browsing experts, etc)
    // Default deny write for other collections
    match /{document=**} {
      allow read: if request.auth != null;
      allow write: if false;
    }
  }
}
